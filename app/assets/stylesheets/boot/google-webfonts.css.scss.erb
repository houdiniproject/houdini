  url('/assets/Open_Sans/opensans-light-webfont.svg#open_sanslight') format('svg');
  font-weight: 200;
  font-style: normal;
}

@font-face {
  font-family: 'Open Sans';
  src: url('/assets/Open_Sans/opensans-bold-webfont.eot');
  src: url('/assets/Open_Sans/opensans-bold-webfont.eot?#iefix') format('embedded-opentype'),
  url('/assets/Open_Sans/opensans-bold-webfont.woff') format('woff'),
