  url('/assets/Open_Sans/opensans-bold-webfont.svg#open_sansbold') format('svg');
  font-weight: bold;
  font-style: normal;
}


/* Bitter */

$condensed: '<%= asset_path('Open_Sans_Condensed') %>';

