/* Open Sans */

@font-face {
  font-family: 'Open Sans';
  src: url('/assets/Open_Sans/opensans-regular-webfont.eot');
  src: url('/assets/Open_Sans/opensans-regular-webfont.eot?#iefix') format('embedded-opentype'),
  url('/assets/Open_Sans/opensans-regular-webfont.woff') format('woff'),
  url('/assets/Open_Sans/opensans-regular-webfont.ttf') format('truetype'),
  url('/assets/Open_Sans/opensans-regular-webfont.svg#open_sansregular') format('svg');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Open Sans';
  src: url('/assets/Open_Sans/opensans-light-webfont.eot');
  src: url('/assets/Open_Sans/opensans-light-webfont.eot?#iefix') format('embedded-opentype'),
  url('/assets/Open_Sans/opensans-light-webfont.woff') format('woff'),
