<%
  nonprofit = @event.nonprofit
  url = slugged_event_url(
    state_code: nonprofit.state_code_slug,
    city: nonprofit.city_slug,
    name: nonprofit.slug,
    event_slug: @event.slug
  )
%>
<div class="shareButtons">
  <% if nonprofit.facebook.present? %>
    <%= facebook_share(url) %>
  <% end %>

  <div>
    <%= mail_to('',
      subject: "Check the #{@event.name} event from #{nonprofit.name}!",
      body: "Hi,\n\n#{@event.summary.present? ? "#{@event.summary}\n\n" : ''}Follow this link for the event and participate: #{url}",
      class: 'button--circle--large grey'
      ) do %>
      <i class='fa fa-1x fa-envelope-o'></i>
    <% end %>
    <p>Email</p>
  </div>

  <% if nonprofit.twitter.present? %>
    <%= twitter_share(@event.name) %>
  <% end %>
</div>
