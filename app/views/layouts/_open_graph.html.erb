<!-- Facebook OpenGraph -->
<meta property="fb:app_id" content="<%= ENV.fetch('FACEBOOK_APP_ID') %>" />
<meta property="og:site_name" content="CommitChange" />
<meta property="og:url" content="<%= request.original_url %>" />
<meta property="og:type" content="website" />

<% if content_for?(:facebook_tags) %>
	<%= yield :facebook_tags %>
<% else %>
	<meta property="og:title" content="Intelligent fundraising for nonprofits." />
	<meta property="og:description" content="Nonprofit software for Fundraising and Donor Management" />
	<meta property="og:image" content="<%= Houdini.defaults.image.profile %>" />
<% end %>


<!-- Twitter Graph / Card -->
<meta property="twitter:card" content="summary" />
<meta property="twitter:site" content="@CommitChange" />

<% if content_for?(:twitter_tags) %>
	<%= yield :twitter_tags %>
<% else %>
	<meta property="twitter:title" content="Intelligent fundraising for nonprofits." />
	<meta property="twitter:description" content="Nonprofit software for Fundraising and Donor Management" />
<% end %>
